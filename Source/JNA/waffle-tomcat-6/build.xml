<?xml version="1.0" encoding="UTF-8"?>
<project name="waffle-tomcat-6" default="build" basedir=".">
	<property name="project.jar" value="waffle-tomcat-6" />
	<path id="waffle-api.classpath" location="${basedir}/../waffle-api/build/waffle-api.jar" />
	<path id="waffle-core.classpath" location="${basedir}/../waffle-core/build/waffle-core.jar" />
	<path id="waffle-mock.classpath" location="${basedir}/../waffle-mock/build/waffle-mock.jar" />
	<path id="waffle-servlet.classpath" location="${basedir}/../waffle-servlet/build/waffle-servlet.jar" />
	<import file="${basedir}/../build/build.xml" />
	<path id="tomcat.classpath">
		<fileset dir="${thirdparty.dir}/tomcat/lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${thirdparty.dir}/tomcat/bin">
			<include name="*.jar" />
		</fileset>
	</path>
	<path id="project.classpath">
		<path refid="waffle-api.classpath" />
		<path refid="waffle-core.classpath" />
		<path refid="waffle-servlet.classpath" />
		<path refid="tomcat.classpath" />
	</path>
  <path id="project.test.classpath">
		<path refid="waffle-mock.classpath" />
  </path>
</project>
